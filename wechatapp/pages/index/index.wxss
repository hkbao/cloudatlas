/**index.wxss**/
.page__hd {
  padding: 20px;
}

.page__title {
  text-align:left;
  font-size:20px;
  font-weight:400;
}

.page__desc {
  margin-top:5px;
  color:#888888;
  text-align:left;
  font-size:14px;
}

.logo {
  width: 80px;
  height: 51px;
  margin-right: 18px;
}

.weui-panel {
  margin-top: -1px;
}

.weui-media-box {
  border-top: 1rpx solid #e5e5e5;
}

.weui-media-box::before {
  border-top: none;
}

.canvas {
  width: 96%;
  height: 320px;
  margin: 20px;
  padding: auto;
  background-color: #fff;
}

.scroll-view_H{
  white-space: nowrap;
  height: 170px;
}

.scroll-view-item_H {
  display: inline-block;
  width: 86px;
  margin: 10px 10px 10px 0;
  text-align: center;
  font-size: 12px;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

.scroll-view-item_H image {
  width: 80px;
  height: 118px;
}

.scroll-view-item_H view {
  width: 100%;
}