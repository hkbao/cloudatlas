/**app.wxss**/
@import "weui.wxss";
/* page */
page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
}

.page__bd {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

.page__foot{
  margin: 10rpx 0 10rpx 0;
  text-align: center;
  color: #BEBEBE;
  font-size: 0;
}

.page__hd {
  padding: 20px;
}

.page__title {
  text-align:left;
  font-size:20px;
  font-weight:400;
}

.page__desc {
  margin-top:5px;
  color:#888888;
  text-align:left;
  font-size:14px;
}

button.weui-footer__link {
  background: none !important;
  border: none !important;
  border-radius: none !important;
  padding: 2px;
}

image.weui-footer__image {
  height: 20px;
  width: 20px;
  margin-bottom: -3px;
}

.placeholder {
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    height: 1.6em;
    line-height: 1.6em;
    color: #888888;
    font-size: 12px;
}